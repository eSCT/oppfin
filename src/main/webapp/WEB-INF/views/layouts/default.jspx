<html xmlns:jsp="http://java.sun.com/JSP/Page" xmlns:c="http://java.sun.com/jsp/jstl/core" xmlns:spring="http://www.springframework.org/tags" xmlns:util="urn:jsptagdir:/WEB-INF/tags/util" >  
	<jsp:output omit-xml-declaration="yes" />	
	<jsp:output doctype-root-element="HTML" doctype-system="about:legacy-compat" />
	
	<jsp:directive.page contentType="text/html;charset=UTF-8" />  
	<jsp:directive.page pageEncoding="UTF-8" /> 
			
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<!-- <meta http-equiv="X-UA-Compatible" content="IE=8" />  -->	
			
		<util:load-scripts/>
		
		<title>${title}</title>
	</head>
	<body>
	
	<h1>default layout</h1>
  	<jsp:include page="/WEB-INF/views/${view}.jspx"/>
  	<h4>debug</h4>
	<p>${exception}</p>
	
	</body>
</html>
